@page
@model DetailsModel

<h2>Team Details</h2>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Team Name</dt>
        <dd class="col-sm-10">@Model.Team.TeamName</dd>
        <dt class="col-sm-2">Coach Name</dt>
        <dd class="col-sm-10">@Model.Team.CoachName</dd>
        <dt class="col-sm-2">Division</dt>
        <dd class="col-sm-10">@Model.Team.Division</dd>
    </dl>
</div>
<div>
    <h4>Players</h4>
    <hr>
    <dl class="row">
        @foreach (var p in Model.Team.Players)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => p.Name)
            </dt>
            <dd class="col-sm-1">
                @Html.DisplayFor(model => p.Name)
            </dd>
            <dt class="col-sm-9">
                <form method="post">
                    <input type="hidden" asp-for="PlayerIdToDelete" value="@p.PlayerId" />
                    <input type="submit" asp-page-handler="DeletePlayer" asp-route-id="@Model.Team.TeamId"
                        value="Delete Player" class="btn btn-danger btn-sm" />
                </form>
            </dt>
        }
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Team.TeamId" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to Teams</a>
</div>
